generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Conversation {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id             Int          @id @default(autoincrement())
  content        String
  role           String
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId Int
}
